{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": ["ES2015"]
    },
    "include": ["src/**/*", "bin/**/*"],
    "exclude": ["node_modules/**/*", "test/**/*"]
}
